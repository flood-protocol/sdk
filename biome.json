{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignore": [
			"node_modules",
			"**/node_modules",
			"cache",
			"coverage",
			"tsconfig.json",
			"tsconfig.*.json",
			"_cjs",
			"_esm",
			"_types",
			"bun.lockb"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma": "none"
		}
	}
}
